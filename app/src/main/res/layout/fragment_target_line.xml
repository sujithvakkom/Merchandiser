<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/target_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:padding="@dimen/nav_header_vertical_spacing"
        android:text="TextView"
        android:textColor="@color/colorActionBarTextTitle"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/target_site"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/edit_text_padding"
        android:textColor="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="@+id/target_desc"
        app:layout_constraintTop_toBottomOf="@+id/target_desc" />

    <TableLayout
        android:id="@+id/target_table"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/edit_text_padding"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/target_site">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@drawable/divider"
            android:dividerPadding="@dimen/activity_horizontal_margin">

            <TextView
                android:id="@+id/target_cat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:padding="@dimen/nav_header_vertical_spacing"
                android:text="TextView"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/target"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:numeric="decimal"
                android:padding="@dimen/nav_header_vertical_spacing"
                android:text="TextView"
                android:textAlignment="viewEnd"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/achievement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:numeric="decimal"
                android:padding="@dimen/nav_header_vertical_spacing"
                android:text="TextView"
                android:textAlignment="viewEnd"
                android:textSize="18sp" />

        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/incentive_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/edit_text_padding"
        android:text="@string/expected_incentive"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/target_table" />

    <TableLayout
        android:id="@+id/incentive_table"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/edit_text_padding"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/incentive_title">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@drawable/divider"
            android:dividerPadding="@dimen/activity_horizontal_margin">

            <TextView
                android:id="@+id/incentive_cat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:padding="@dimen/nav_header_vertical_spacing"
                android:text="TextView"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/incentive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:numeric="decimal"
                android:padding="@dimen/nav_header_vertical_spacing"
                android:text="TextView"
                android:textAlignment="viewEnd"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/incentive_achievement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:numeric="decimal"
                android:padding="@dimen/nav_header_vertical_spacing"
                android:text="TextView"
                android:textAlignment="viewEnd"
                android:textSize="18sp" />

        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="* Approximate estimation"
        android:textColor="@color/success_foreground"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/target_desc"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>